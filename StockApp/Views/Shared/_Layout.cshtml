<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <style>
        /* Custom styles for a modern header and color scheme */
        body {
            background-color: lightblue; /* Light blue background color */
        }

        .navbar {
            background-color: #FFFFFF; /* Bright blue header background color */
            color: darkblue; /* Text color in the header */
        }

        .navbar-brand {
            font-family: 'Arial', sans-serif; /* Modern font-family */
            font-size: 24px; /* Modern font size */
            text-align: left; /* Center the text */
            width: 100%; /* Full width for the text */
        }

            .navbar-brand:hover {
                color: black; /* Text color on hover */
            }

        .sidebar {
            height: 100vh;
            background-color: #2C3E50; /* Modern sidebar background color */
        }

            .sidebar a {
                color: white;
            }
    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Stock Management</a>
    </nav>

    <!-- Main Content Wrapper -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 p-0">
                <div class="bg-light border-right sidebar">
                    <div class="list-group list-group-flush">
                        <a href="/Stores" class="list-group-item list-group-item-action bg-light text-dark">Stores</a>
                        <a href="/Items" class="list-group-item list-group-item-action bg-light text-dark">Items</a>
                        <a href="/Invoices" class="list-group-item list-group-item-action bg-light text-dark">Create Invoices</a>
                    </div>
                </div>
            </div>

            <div class="col-md-1">
            </div>

            <!-- Content Section -->
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
