@model IEnumerable<Stock.BL.Items.DTOs.ItemReadDTO>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="heading-elements">
                    <a class="btn btn-primary" asp-action="Create">Create New</a>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body card-dashboard">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Total Balance</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.TotalBalance</td>
                                        <td>
                                            <a class="btn btn-info ms-1" asp-action="ShowStores" asp-route-id="@item.Id">Show Stores</a>
                                            <a class="btn btn-warning ms-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



